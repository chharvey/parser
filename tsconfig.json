{
	"compilerOptions": {
		"target":                 "ES2020",
		"module":                 "commonjs",
		"esModuleInterop":        true,
		"strict":                 true,
		"importsNotUsedAsValues": "error",
		"noImplicitReturns":      true,
		"noUnusedLocals":         true,
		"noUnusedParameters":     true,
		"removeComments":         true,
		"noEmitOnError":          true
	},
	"typedocOptions": {
		"name":        "@chharvey/parser",
		"entryPoints": "./src/index.ts",
		"out":         "./docs/api/"
	}
}
