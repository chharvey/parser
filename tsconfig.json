{
	"compilerOptions": {

		"declaration": true,
		"module":      "commonjs",
		"target":      "ES2021",

		"strict": true,

		"esModuleInterop": true,

		"noImplicitOverride": true,
		"noImplicitReturns":  true,
		"noUnusedLocals":     true,
		"noUnusedParameters": true,

		"importsNotUsedAsValues": "error",
		"noEmitOnError":          true,
		"skipLibCheck":           true
	}
}
